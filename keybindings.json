// Place your key bindings in this file to override the defaults
[
    {
      "key": "cmd+i",
      "command": "editor.action.insertSnippet",
      "args": { 
        "snippet": "*$1*" 
      },
      "when": "editorTextFocus && !editorReadonly && editorLangId == 'markdown'"
    },
    {
      "key": "cmd+b",
      "command": "editor.action.insertSnippet",
      "args": { 
        "snippet": "**$1**" 
      },
      "when": "editorTextFocus && !editorReadonly && editorLangId == 'markdown'"
    },
    {
      "key": "ctrl+i",
      "command": "editor.action.insertSnippet",
      "args": { 
        "snippet": "*$1*" 
      },
      "when": "editorTextFocus && !editorReadonly && editorLangId == 'markdown'"
    },
    {
      "key": "ctrl+b",
      "command": "editor.action.insertSnippet",
      "args": { 
        "snippet": "**$1**" 
      },
      "when": "editorTextFocus && !editorReadonly && editorLangId == 'markdown'"
    }
]
