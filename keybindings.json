// Place your key bindings in this file to override the defaults
[
    {
        "key": "ctrl+b",
        "command": "editor.action.insertSnippet",
        "args": { 
          "snippet": "**$1**" 
        },
        "when": "editorTextFocus && !editorReadonly && editorLangId == 'markdown'"
    },
    {
      "key": "ctrl+i",
      "command": "editor.action.insertSnippet",
      "args": { 
        "snippet": "*$1*" 
      },
      "when": "editorTextFocus && !editorReadonly && editorLangId == 'markdown'"
  }
]
